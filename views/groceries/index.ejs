<!DOCTYPE html>
<html>
  <head>
    <title>Grocery List</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h2>Grocery List</h2>
    <table id="list">
      <thead>
        <tr>
          <th>Item</th>
          <th>Category</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% groceries.forEach(function(g) { %>
          <tr>
            <td><%= g.item %></td>
            <td><%= g.category %></td>
            <td><a href="/groceries/<%= g._id %>">DETAILS</a></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    <h4><a href="/groceries/new">Add More Groceries</a></h4>
  </body>
</html>